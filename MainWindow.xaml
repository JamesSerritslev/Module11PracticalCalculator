<Window x:Class="Module11PracticalCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Calculator" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Display -->
        <TextBox x:Name="Display" Grid.Row="0" IsReadOnly="True" Margin="10" FontSize="24" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
        
        <!-- Buttons Grid -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Number Buttons -->
            <Button Content="7" Grid.Row="0" Grid.Column="0" Click="NumberButton_Click" />
            <Button Content="8" Grid.Row="0" Grid.Column="1" Click="NumberButton_Click" />
            <Button Content="9" Grid.Row="0" Grid.Column="2" Click="NumberButton_Click" />
            <Button Content="/" Grid.Row="0" Grid.Column="3" Click="OperationButton_Click" />
            
            <Button Content="4" Grid.Row="1" Grid.Column="0" Click="NumberButton_Click" />
            <Button Content="5" Grid.Row="1" Grid.Column="1" Click="NumberButton_Click" />
            <Button Content="6" Grid.Row="1" Grid.Column="2" Click="NumberButton_Click" />
            <Button Content="x" Grid.Row="1" Grid.Column="3" Click="OperationButton_Click" />
            
            <Button Content="1" Grid.Row="2" Grid.Column="0" Click="NumberButton_Click" />
            <Button Content="2" Grid.Row="2" Grid.Column="1" Click="NumberButton_Click" />
            <Button Content="3" Grid.Row="2" Grid.Column="2" Click="NumberButton_Click" />
            <Button Content="-" Grid.Row="2" Grid.Column="3" Click="OperationButton_Click" />
            
            <Button Content="0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="NumberButton_Click" />
            <Button Content="C" Grid.Row="3" Grid.Column="2" Click="ClearButton_Click" />
            <Button Content="+" Grid.Row="3" Grid.Column="3" Click="OperationButton_Click" />
            
            <Button Content="=" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Click="EqualsButton_Click" />
        </Grid>
    </Grid>
</Window>   
    

